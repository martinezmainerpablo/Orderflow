{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information"
    }
  },
  "JWT": {
    "Issuer": "localhost",
    "Audience": "localhost",
    "ExpiryInMinutes": 60
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "identity-api-auth": {
        "ClusterId": "identity-api",
        //"AuthorizationPolicy": "anonymous",
        "RateLimiterPolicy": "open",
        "Match": {
          "Path": "/api/auth/{**catch-all}"
        }
      },
      "identity-api-rol": {
        "ClusterId": "identity-api",
        //"AuthorizationPolicy": "admin",
        "RateLimiterPolicy": "open",
        "Match": {
          "Path": "/api/roles/{**catch-all}"
        }
      },
      "identity-api-users": {
        "ClusterId": "identity-api",
        //"AuthorizationPolicy": "user",
        "RateLimiterPolicy": "open",
        "Match": {
          "Path": "/api/users/{**catch-all}"
        }
      },
      "identity-api-usersadmin": {
        "ClusterId": "identity-api",
        //"AuthorizationPolicy": "admin",
        "RateLimiterPolicy": "open",
        "Match": {
          "Path": "/api/usersadmin/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "identity-api": {
        "LoadBalancingPolicy": "RoundRobin",
        "Destinations": {
          "destination1": {
            "Address": "https://orderflow-identity"
          }
        }
      }
    }
  }
}