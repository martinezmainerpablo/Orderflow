{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "identity-api-auth": {
        "ClusterId": "identity-api",
        "RateLimiterPolicy": "open",
        "Match": {
          "Path": "/api/auth/{**catch-all}"
        }
      },
      "identity-api-roles": {
        "ClusterId": "identity-api",
        "RateLimiterPolicy": "open",
        "Match": {
          "Path": "/api/roles/{**catch-all}"
        }
      }
    },
    "identity-api-users": {
      "ClusterId": "identity-api",
      "RateLimiterPolicy": "open",
      "Match": {
        "Path": "/api/users/{**catch-all}"
      }
    },
    "identity-api-usersadmin": {
      "ClusterId": "identity-api",
      "RateLimiterPolicy": "open",
      "Match": {
        "Path": "/api/usersadmin/{**catch-all}"
      }
    }
  },
  "Clusters": {
    "identity-api": {
      "LoadBalancingPolicy": "RoundRobin",
      "Destinations": {
        "destination1": {
          "Address": "https+http://orderflow-identity"
        }
      }
    }
  }
} 
