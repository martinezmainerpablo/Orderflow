{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Microsoft.IdentityModel": "Information"
    }
  },
  "JWT": {
    "Issuer": "Orderflow.Identity",
    "Audience": "Orderflow.Client",
    "ExpiryInMinutes": "180"
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "identity-api-auth": {
        "ClusterId": "identity-api",
        "AuthorizationPolicy": "anonymous",
        "RateLimiterPolicy": "open",
        "Match": {
          "Path": "/api/auth/{**catch-all}"
        }
      },
      "identity-api-rol": {
        "ClusterId": "identity-api",
        "AuthorizationPolicy": "admin",
        "RateLimiterPolicy": "open",
        "Match": {
          "Path": "/api/roles/{**catch-all}"
        }
      },
      "identity-api-users": {
        "ClusterId": "identity-api",
        "AuthorizationPolicy": "user",
        "RateLimiterPolicy": "open",
        "Match": {
          "Path": "/api/users/{**catch-all}"
        }
      },
      "identity-api-usersadmin": {
        "ClusterId": "identity-api",
        "AuthorizationPolicy": "admin",
        "RateLimiterPolicy": "open",
        "Match": {
          "Path": "/api/usersadmin/{**catch-all}"
        }
      },
      "catalog-api-categories-users-getallcategory": {
        "ClusterId": "catalog-api",
        "AuthorizationPolicy": "user",
        "RateLimiterPolicy": "open",
        "Match": {
          "Path": "/api/v{version}/categories/getallcategory"
        }
      },
      "catalog-api-categories-users-getcategory": {
        "ClusterId": "catalog-api",
        "AuthorizationPolicy": "user",
        "RateLimiterPolicy": "open",
        "Match": {
          "Path": "/api/v{version}/products/getcategory/{id}"
        }
      },
      "catalog-api-categories": {
        "ClusterId": "catalog-api",
        "AuthorizationPolicy": "admin",
        "RateLimiterPolicy": "open",
        "Match": {
          "Path": "/api/v{version}/categories/{**catch-all}"
        }
      },
      "catalog-api-products-users-getall": {
        "ClusterId": "catalog-api",
        "AuthorizationPolicy": "user",
        "RateLimiterPolicy": "open",
        "Match": {
          "Path": "/api/v{version}/products/getall"
        }
      },
      "catalog-api-products-users-getproduct": {
        "ClusterId": "catalog-api",
        "AuthorizationPolicy": "user",
        "RateLimiterPolicy": "open",
        "Match": {
          "Path": "/api/v{version}/products/getproduct/{id}"
        }
      },
      "catalog-api-products-admin": {
        "ClusterId": "catalog-api",
        "AuthorizationPolicy": "admin",
        "RateLimiterPolicy": "open",
        "Match": {
          "Path": "/api/v{version}/products/{**catch-all}"
        }
      },
      "orders-user": {
        "ClusterId": "orders-api",
        "AuthorizationPolicy": "user",
        "RateLimiterPolicy": "open",
        "Match": {
          "Path": "/api/v{version}/orders/{**catch-all}"
        }
      },
      "orders-admin": {
        "ClusterId": "orders-api",
        "AuthorizationPolicy": "admin",
        "RateLimiterPolicy": "open",
        "Match": {
          "Path": "/api/v{version}/admin/{**catch-all}"
        }
      }
    },

    "Clusters": {
      "identity-api": {
        "LoadBalancingPolicy": "RoundRobin",
        "Destinations": {
          "destination1": {
            "Address": "https://orderflow-identity"
          }
        }
      },
      "catalog-api": {
        "LoadBalancingPolicy": "RoundRobin",
        "Destinations": {
          "destination1": {
            "Address": "https://orderflow-catalog"
          }
        }
      },
      "orders-api": {
        "LoadBalancingPolicy": "RoundRobin",
        "Destinations": {
          "destination1": {
            "Address": "https://orderflow-orders"
          }
        }
      }
    }
  }
}